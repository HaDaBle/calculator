<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/equationTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end"
        android:padding="16dp"
        android:text="eqation"
        android:textColor="@color/defaultTextColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/resultTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp"
        android:textColor="@color/defaultTextColor"
        android:text="result"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/keypadFlow"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/keypadFlow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:constraint_referenced_ids="button1,button2,button3,buttonClear,button4,button5,button6,buttonPlus,button7,button8,button9,buttonMinus,button0,buttonEqual"
        app:flow_horizontalGap="8dp"
        app:flow_maxElementsWrap="4"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button1"
        style="@style/numberKeypad"
        android:text="1"
        android:textSize="36sp"
        android:onClick="numberClicked"
        tools:ignore="MissingConstraints"
        />

    <Button
        android:id="@+id/button2"
        style="@style/numberKeypad"
        android:text="2"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="34dp"
        tools:ignore="MissingConstraints"
        android:onClick="numberClicked"
        />

    <Button
        android:id="@+id/button3"
        style="@style/numberKeypad"
        android:text="3"
        android:textSize="36sp"
        tools:ignore="MissingConstraints"
        android:onClick="numberClicked"
        />
    <Button
        android:id="@+id/button4"
        style="@style/numberKeypad"
        android:text="4"
        android:textSize="36sp"
        tools:ignore="MissingConstraints"
        android:onClick="numberClicked"
        />

    <Button
        android:id="@+id/button5"
        style="@style/numberKeypad"
        android:text="5"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="34dp"
        tools:ignore="MissingConstraints"
        android:onClick="numberClicked"
        />

    <Button
        android:id="@+id/button6"
        style="@style/numberKeypad"
        android:text="6"
        android:textSize="36sp"
        tools:ignore="MissingConstraints"
        android:onClick="numberClicked"
        />
    <Button
        android:id="@+id/button7"
        style="@style/numberKeypad"
        android:text="7"
        android:textSize="36sp"
        tools:ignore="MissingConstraints"
        android:onClick="numberClicked"
        />

    <Button
        android:id="@+id/button8"
        style="@style/numberKeypad"
        android:text="8"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="34dp"
        tools:ignore="MissingConstraints"
        android:onClick="numberClicked"
        />

    <Button
        android:id="@+id/button9"
        style="@style/numberKeypad"
        android:text="9"
        android:textSize="36sp"
        tools:ignore="MissingConstraints"
        android:onClick="numberClicked"
        />
    <Button
        android:id="@+id/button0"
        style="@style/numberKeypad"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintHorizontal_weight="1"
        tools:ignore="MissingConstraints"
        android:onClick="numberClicked"
        />
    <Button
        android:id="@+id/buttonEqual"
        style="@style/operatorKeyPad"
        android:text="="
        android:textSize="36sp"
        app:layout_constraintHorizontal_weight="3"
        tools:ignore="MissingConstraints"
        android:onClick="equalClicked"
        />
    <Button
        android:id="@+id/buttonClear"
        style="@style/operatorKeyPad"
        android:text="C"
        android:textSize="36sp"
        android:onClick="clearClicked"
        tools:ignore="MissingConstraints"
        />
    <Button
        android:id="@+id/buttonPlus"
        style="@style/operatorKeyPad"
        android:text="+"
        android:textSize="36sp"
        android:onClick="operatorClicked"
        tools:ignore="MissingConstraints"
        />
    <Button
        android:id="@+id/buttonMinus"
        style="@style/operatorKeyPad"
        android:text="-"
        android:textSize="36sp"
        android:onClick="operatorClicked"
        tools:ignore="MissingConstraints"
        />
</androidx.constraintlayout.widget.ConstraintLayout>